{
    "name": "ekvedaras/class-factory",
    "description": "Factory for creating objects via constructor arguments",
    "keywords": [
        "ekvedaras",
        "class-factory"
    ],
    "homepage": "https://github.com/ekvedaras/class-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "Ernestas Kvedaras",
            "email": "kvedarasernestas@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.66.0",
        "pestphp/pest": "^3.7.1",
        "phpstan/phpstan": "^2.1.0"
    },
    "autoload": {
        "psr-4": {
            "EKvedaras\\ClassFactory\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EKvedaras\\ClassFactory\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "stan": "vendor/bin/phpstan",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
